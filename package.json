{
  "name": "geoarchy",
  "version": "0.0.1",
  "description": "map ui platform",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "packages/*",
      "web",
      "types"
    ]
  },
  "engineStrict": true,
  "engines": {
    "node": "11.1",
    "yarn": ""
  },
  "scripts": {
    "lint": "tslint **/*.{ts,tsx,json}",
    "dev": "oao run-script --parallel dev",
    "build": "oao run-script --parallel build",
    "start": "oao run-script --parallel start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "oao": "^1.5.1",
    "prettier": "^1.14.2",
    "prettier-eslint": "^8.8.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0"
  }
}
