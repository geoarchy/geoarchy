{
  "linterOptions": {
    "exclude": ["**/node_modules/**"]
  },
  "extends": ["tslint-config-airbnb", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "jsx-no-lambda": false
  }
}
